{
    "compilerOptions": {
      "outDir": "dist",
      "module": "commonjs",
      "target": "es2019",
      "esModuleInterop": true,
      "sourceMap": true,
      "rootDirs": ["src", "tests"], 
      "baseUrl": "src",
      "strictNullChecks": true,
      "removeComments": true,
      "paths": {
        "@/tests/*": ["../tests/*"],
        "@/*": ["*"]
      }
    },
    "include": ["src", "tests"],  
  }